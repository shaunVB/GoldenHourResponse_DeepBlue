<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.basics.svb.goldenhourhelp.SOSActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="105dp"
            android:text="SOS HELP"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/phoneno1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:hint="Enter Phone no. 1"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/phoneno2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/phoneno1"
            android:layout_below="@+id/phoneno1"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:hint="Enter Phone no.2"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/phoneno1"
            android:layout_toEndOf="@+id/phoneno1"
            android:ems="10"
            android:hint="Enter Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/phoneno2"
            android:layout_toEndOf="@+id/phoneno2"
            android:ems="10"
            android:hint="Enter Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/phoneno3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/phoneno2"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Enter Phone no.2"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/phoneno3"
            android:layout_toEndOf="@+id/phoneno3"
            android:ems="10"
            android:hint="Enter Name"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/okbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phoneno3"
            android:layout_marginTop="18dp"
            android:layout_toStartOf="@+id/whatsappbutton"
            android:text="send location\n message"
            android:textColor="#4b1610" />

        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/okbutton"
            android:layout_marginTop="14dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/call2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/locationText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/call3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/call2"
            android:layout_marginTop="12dp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/getLocationBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="18dp"
            android:text="get location"
            tools:layout_editor_absoluteX="116dp"
            tools:layout_editor_absoluteY="503dp" />

        <Button
            android:id="@+id/whatsappbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/okbutton"
            android:layout_toEndOf="@+id/phoneno3"
            android:text="whatsapp message"
            android:textColor="#25d366" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
