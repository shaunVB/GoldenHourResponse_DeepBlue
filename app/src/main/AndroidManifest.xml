<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.basics.svb.goldenhourhelp">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SOSActivity"
            android:label="@string/GoldenHourHelp" />
        <activity android:name=".TorchActivity" />
        <activity android:name=".Torch2Main" />
        <activity android:name=".WhatsappActivity" />
        <activity
            android:name=".FirstAidActivity"
            android:label="@string/title_activity_first_aid"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>